{
  "scripts": {
    "build:debug": "browserify --debug index.js -s DraftEditor -o dist/draft-editor.debug.js",
    "build:min": "browserify -p tinyify index.js -s DraftEditor -o dist/draft-editor.min.js",
    "install": "npm run build:debug && npm run build:min",
    "prepare": "npm install && npm test",
    "test": "standard && dependency-check --no-dev index.js"
  },
  "dependencies": {
    "prosemirror-dropcursor": "^1.3.2",
    "prosemirror-example-setup": "^1.1.2",
    "prosemirror-history": "^1.1.3",
    "prosemirror-inputrules": "^1.1.2",
    "prosemirror-markdown": "^1.4.5",
    "prosemirror-view": "^1.14.11",
    "prosemirror-commands": "^1.1.4",
    "prosemirror-state": "^1.3.3",
    "prosemirror-keymap": "^1.1.4"
  },
  "devDependencies": {
    "browserify": "^16.5.1",
    "dependency-check": "^4.1.0",
    "standard": "^14.3.4",
    "tinyify": "^2.5.2"
  }
}
